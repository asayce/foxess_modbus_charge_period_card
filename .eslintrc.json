{
    "env": {
        "browser": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "ignorePatterns": [
        "dist/**"
    ],
    "rules": {
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "no-restricted-syntax": "off",
        "no-plusplus": "off",
        "max-classes-per-file": "off",
        "class-methods-use-this": "off",
        "linebreak-style": "off",
        "max-len": [
            "error",
            {
                "code": 200
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true
            }
        ]
    }
}